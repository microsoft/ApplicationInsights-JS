{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2016",
        "lib": [
            "es2017",
            "ES2018.Promise",
            "dom"
        ],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "types": [
            "@types/chrome"
        ],
        "noEmit": false,
        "inlineSourceMap": false,
        "inlineSources": true,
        "allowJs": false,
        "declaration": true,
        "declarationDir": "build/types",
        "outDir": "dist-es5",
        "rootDir": "./src",
        "removeComments": false
        },
    "exclude": [
        "node_modules"
    ]
}