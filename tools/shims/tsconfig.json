{
    "compilerOptions": {
      "sourceMap": true,
      "inlineSources": true,
      "noImplicitAny": true,
      "module": "es6",
      "moduleResolution": "node",
      "target": "es5",
      "forceConsistentCasingInFileNames": true,
      "importHelpers": false,
      "noEmitHelpers": true,
      "alwaysStrict": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "declarationDir": "./types",
      "outDir": "dist-es5",
      "rootDir": "./src",
      "removeComments": false
    },
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": ["./node_modules/**"]
  }